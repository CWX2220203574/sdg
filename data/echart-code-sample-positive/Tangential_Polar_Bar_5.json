{
    "polar": {
        "radius": [
            40,
            "75%"
        ],
        "center": ["48%", "52%"]
    },
    "angleAxis": {
        "max": 5,
        "startAngle": 50,
        "axisLine": {
            "show": false
        },
        "splitLine": {
            "show": true,
            "lineStyle": {
                "color": "#ccc",
                "type": "dashed"
            }
        }
    },
    "radiusAxis": {
        "type": "category",
        "data": [
            "语音助手",
            "量子计算",
            "深度学习",
            "云计算"
        ],
        "axisLabel": {
            "show": true,
            "interval": 0,
            "rotate": -20,
            "margin": 10,
            "textStyle": {
                "color": "#444",
                "fontSize": 16
            }
        },
        "axisTick": {
            "show": true,
            "length": 6
        }
    },
    "tooltip": {
        "trigger": "item",
        "transitionDuration": 0.4,
        "textStyle": {
            "fontFamily": "Arial"
        }
    },
    "series": {
        "type": "bar",
        "data": [
            4.0,
            4.5,
            1.0,
            3.0
        ],
        "color": [
            "#91CC75"
        ],
        "coordinateSystem": "polar",
        "label": {
            "show": true,
            "position": "top",
            "formatter": "{c}",
            "fontSize": 18,
            "color": "#000"
        },
        "barWidth": 20,
        "itemStyle": {
            "borderColor": "#ddd",
            "borderWidth": 3
        }
    },
    "backgroundColor": "#f8f8f8",
    "title": {
        "text": "切向极坐标柱状图示例",
        "left": "center",
        "top": "1%",
        "textStyle": {
            "fontSize": 20,
            "color": "#333"
        }
    }
}