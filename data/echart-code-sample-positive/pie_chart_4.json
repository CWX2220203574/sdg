{
    "tooltip": {
        "trigger": "item",
        "position": "top",
        "textStyle": {
            "fontWeight": "bold"
        }
    },
    "legend": {
        "top": "right",
        "left": "center",
        "orient": "vertical",
        "textStyle": {
            "fontSize": 13,
            "color": "#777"
        },
        "itemWidth": 15,
        "itemHeight": 15
    },
    "series": [
        {
            "type": "pie",
            "radius": [
                "55%",
                "72%"
            ],
            "center": [
                "55%",
                "52%"
            ],
            "itemStyle": {
                "borderRadius": 6,
                "borderColor": "#f5f5f5",
                "borderWidth": 3
            },
            "label": {
                "show": true,
                "position": "outside",
                "formatter": "{b}: {d}%",
                "fontSize": 15,
                "color": "#666",
                "distance": 15
            },
            "emphasis": {
                "label": {
                    "show": true,
                    "color": "#ff9900",
                    "fontSize": 17
                }
            },
            "data": [
                {
                    "name": "搜索引擎",
                    "value": 500
                },
                {
                    "name": "直接访问",
                    "value": 1300
                },
                {
                    "name": "电子邮件",
                    "value": 900
                },
                {
                    "name": "联盟广告",
                    "value": 1000
                }
            ],
            "animation": true,
            "animationDuration": 2000,
            "animationEasing": "cubicInOut"
        }
    ],
    "backgroundColor": "#fcfcfc",
    "visualMap": {
        "show": false,
        "min": 0,
        "max": 2000,
        "inRange": {
            "colorLightness": [0.3, 0.7]
        }
    }
}