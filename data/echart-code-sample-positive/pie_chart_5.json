{
    "tooltip": {
        "trigger": "item",
        "transitionDuration": 0.3,
        "textStyle": {
            "fontFamily": "Arial"
        }
    },
    "legend": {
        "top": "center",
        "left": "left",
        "orient": "vertical",
        "textStyle": {
            "fontSize": 15,
            "color": "#444"
        },
        "selectedMode": "single"
    },
    "series": [
        {
            "type": "pie",
            "radius": [
                "40%",
                "68%"
            ],
            "center": [
                "52%",
                "58%"
            ],
            "itemStyle": {
                "borderRadius": 4,
                "borderColor": "#ddd",
                "borderWidth": 3
            },
            "label": {
                "show": true,
                "position": "center",
                "formatter": "{b}: {c} ({d}%)",
                "fontSize": 22,
                "fontWeight": "bold",
                "color": "#222"
            },
            "emphasis": {
                "label": {
                    "show": true,
                    "color": "#00ffcc",
                    "fontSize": 24
                }
            },
            "data": [
                {
                    "name": "搜索引擎",
                    "value": 1600
                },
                {
                    "name": "直接访问",
                    "value": 400
                },
                {
                    "name": "电子邮件",
                    "value": 1300
                }
            ],
            "animation": false,
            "avoidLabelOverlap": false
        }
    ],
    "backgroundColor": "#f8f8f8",
    "title": {
        "text": "饼图示例",
        "left": "center",
        "top": "1%",
        "textStyle": {
            "fontSize": 20,
            "color": "#333"
        }
    }
}