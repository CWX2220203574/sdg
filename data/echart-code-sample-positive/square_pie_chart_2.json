{
    "tooltip": {
        "trigger": "item",
        "triggerOn": "mousemove|click",
        "formatter": "{b}: {c} <br/>占比: {d}%",
        "extraCssText": "box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);"
    },
    "legend": {
        "show": true,
        "top": "bottom",
        "left": "center",
        "orient": "horizontal",
        "textStyle": {
            "fontSize": 14,
            "color": "#333"
        },
        "itemGap": 20,
        "data": [
            "加密货币",
            "聊天机器人",
            "计算机视觉",
            "数据隐私"
        ]
    },
    "series": [
        {
            "name": "Access From",
            "type": "pie",
            "radius": [
                "60%",
                "85%"
            ],
            "center": [
                "50%",
                "50%"
            ],
            "startAngle":90,
            "endAngle": 360,
            "data": [
                {
                    "value": 100,
                    "name": "加密货币"
                },
                {
                    "value": 300,
                    "name": "聊天机器人"
                },
                {
                    "value": 700,
                    "name": "计算机视觉"
                },
                {
                    "value": 900,
                    "name": "数据隐私"
                }
            ],
            "itemStyle": {
                "borderColor": "#eee",
                "borderWidth": 3,
                "shadowBlur": 5,
                "shadowColor": "rgba(0, 0, 0, 0.1)"
            },
            "label": {
                "show": true,
                "position": "inside",
                "formatter": "{b}\n{d}%",
                "fontSize": 16,
                "color": "#fff"
            },
            "emphasis": {
                "itemStyle": {
                    "scale": 1.1
                },
                "label": {
                    "color": "#ff0"
                }
            }
        }
    ],
    "backgroundColor": "#f0f0f0",
    "visualMap": {
        "show": false,
        "min": 0,
        "max": 1000,
        "inRange": {
            "color": [
                "#e0f7fa",
                "#b2ebf2",
                "#80deea",
                "#4dd0e1"
            ]
        }
    }
}