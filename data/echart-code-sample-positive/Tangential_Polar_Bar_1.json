{
    "polar": {
        "radius": [
            20,
            "85%"
        ],
        "center": ["40%", "50%"]
    },
    "angleAxis": {
        "max": 3,
        "startAngle": 45,
        "axisLine": {
            "show": true,
            "lineStyle": {
                "color": "#ccc",
                "width": 2
            }
        },
        "splitLine": {
            "show": true,
            "lineStyle": {
                "color": "#eee",
                "type": "dashed"
            }
        }
    },
    "radiusAxis": {
        "type": "category",
        "data": [
            "数据分析",
            "自动驾驶",
            "5G技术"
        ],
        "axisLabel": {
            "show": true,
            "interval": 0,
            "rotate": 15,
            "margin": 10,
            "textStyle": {
                "color": "#555",
                "fontSize": 12
            }
        },
        "axisTick": {
            "show": true,
            "length": 8
        }
    },
    "tooltip": {
        "trigger": "item",
        "backgroundColor": "rgba(0, 0, 0, 0.8)",
        "textStyle": {
            "color": "#fff"
        },
        "padding": 10
    },
    "series": {
        "type": "bar",
        "data": [
            3.0,
            2.5,
            1.0
        ],
        "color": [
            "#40E0D0"
        ],
        "coordinateSystem": "polar",
        "label": {
            "show": true,
            "position": "inside",
            "formatter": "{c}",
            "fontSize": 14,
            "color": "#000"
        },
        "barWidth": 15,
        "itemStyle": {
            "opacity": 0.9
        }
    },
    "backgroundColor": "#f9f9f9",
    "animation": {
        "duration": 1200,
        "easing": "cubicOut"
    }
}