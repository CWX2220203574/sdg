{
    "polar": {
        "radius": [
            35,
            "90%"
        ],
        "center": ["45%", "55%"]
    },
    "angleAxis": {
        "max": 4,
        "startAngle": 80,
        "axisLine": {
            "show": true,
            "lineStyle": {
                "color": "#999",
                "width": 3
            }
        },
        "splitLine": {
            "show": true,
            "lineStyle": {
                "color": "#ddd",
                "type": "solid"
            }
        }
    },
    "radiusAxis": {
        "type": "category",
        "data": [
            "户外广告牌",
            "联盟营销",
            "病毒营销",
            "游击营销",
            "付费搜索"
        ],
        "axisLabel": {
            "show": true,
            "interval": 0,
            "rotate": 30,
            "margin": 8,
            "textStyle": {
                "color": "#666",
                "fontSize": 12
            }
        },
        "axisTick": {
            "show": true,
            "length": 10
        }
    },
    "tooltip": {
        "trigger": "item",
        "axisPointer": {
            "type": "shadow"
        },
        "textStyle": {
            "fontStyle": "italic"
        }
    },
    "series": {
        "type": "bar",
        "data": [
            1.0,
            2.0,
            2.2,
            2.4,
            3.8
        ],
        "color": [
            "#FAC858"
        ],
        "coordinateSystem": "polar",
        "label": {
            "show": true,
            "position": "bottom",
            "formatter": "{c}",
            "fontSize": 14,
            "color": "#333"
        },
        "barWidth": 18,
        "itemStyle": {
            "shadowBlur": 5,
            "shadowColor": "rgba(0, 0, 0, 0.2)"
        }
    },
    "backgroundColor": "#eaeaea",
    "toolbox": {
        "show": true,
        "feature": {
            "saveAsImage": {}
        }
    }
}