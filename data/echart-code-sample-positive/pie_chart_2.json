{
    "tooltip": {
        "trigger": "item",
        "triggerOn": "mousemove|click",
        "formatter": "{b}: {c} <br/>占比: {d}%",
        "extraCssText": "box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);"
    },
    "legend": {
        "top": "bottom",
        "left": "center",
        "orient": "horizontal",
        "textStyle": {
            "fontSize": 16,
            "color": "#333"
        },
        "itemGap": 20
    },
    "series": [
        {
            "type": "pie",
            "radius": [
                "45%",
                "65%"
            ],
            "center": [
                "50%",
                "45%"
            ],
            "itemStyle": {
                "borderRadius": 3,
                "borderColor": "#ccc",
                "borderWidth": 4
            },
            "label": {
                "show": false,
                "position": "center"
            },
            "emphasis": {
                "label": {
                    "show": true,
                    "color": "#00ff00",
                    "fontSize": 20,
                    "formatter": "{b}: {d}%"
                }
            },
            "data": [
                {
                    "name": "在线教育",
                    "value": 800
                },
                {
                    "name": "职业培训",
                    "value": 300
                },
                {
                    "name": "技能提升",
                    "value": 1000
                }
            ],
            "animation": true,
            "animationDuration": 1500,
            "animationEasing": "elasticOut"
        }
    ],
    "backgroundColor": "#f0f0f0",
    "toolbox": {
        "show": true,
        "feature": {
            "saveAsImage": {}
        }
    }
}