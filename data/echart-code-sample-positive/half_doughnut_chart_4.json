{
  "tooltip": {
    "trigger": "item",
    "transitionDuration": 0.5,
    "axisPointer": {
      "type": "shadow"
    }
  },
  "legend": {
    "show": true,
    "top": "3%",
    "left": "center",
    "data": [
      "产品开发",
      "危机管理",
      "客户满意度",
      "市场分析"
    ],
    "selectedMode": false,
    "textStyle": {
      "fontFamily": "Arial",
      "fontStyle": "italic"
    }
  },
  "series": [
    {
      "name": "Access From",
      "type": "pie",
      "radius": [
        "35%",
        "75%"
      ],
      "center": [
        "55%",
        "55%"
      ],
      "startAngle": 180,
      "endAngle": 360,
      "data": [
        {
          "value": 600,
          "name": "产品开发"
        },
        {
          "value": 650,
          "name": "危机管理"
        },
        {
          "value": 50,
          "name": "客户满意度"
        },
        {
          "value": 350,
          "name": "市场分析"
        }
      ],
      "itemStyle": {
        "barBorderRadius": [5, 5, 0, 0],
        "color": "function (params) {var colorMap = {'产品开发': '#FF9900','危机管理': '#0099FF','客户满意度': '#FF0066','市场分析': '#66CC66'};return colorMap[params.name];}"
      },
      "label": {
        "show": true,
        "position": "outside",
        "formatter": "{d}%",
        "fontSize": 18,
        "color": "#333",
        "rich": {
          "value": {
            "color": "#FF6600",
            "fontWeight": "bold"
          }
        }
      },
      "emphasis":{
        "label": {
          "show": true,
          "textShadow": "2px 2px 4px rgba(0, 0, 0, 0.3)"
        }
      }
    }
  ],
  "backgroundColor": "#f8f8f8",
  "animationDurationUpdate": 1200,
  "animationEasingUpdate": "quinticInOut"
}