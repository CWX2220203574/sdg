{
    "polar": {
        "radius": [
            30,
            "70%"
        ],
        "center": ["50%", "50%"]
    },
    "angleAxis": {
        "max": 4,
        "startAngle": 70,
        "axisLine": {
            "show": false
        },
        "splitLine": {
            "show": false
        }
    },
    "radiusAxis": {
        "type": "category",
        "data": [
            "学校管理",
            "教育合作",
            "学生评估",
            "学术研究"
        ],
        "axisLabel": {
            "show": true,
            "interval": 0,
            "rotate": -10,
            "margin": 12,
            "textStyle": {
                "color": "#888",
                "fontSize": 14
            }
        },
        "axisTick": {
            "show": false
        }
    },
    "tooltip": {
        "trigger": "item",
        "triggerOn": "mousemove|click",
        "formatter": "{b}: {c}",
        "extraCssText": "box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);"
    },
    "series": {
        "type": "bar",
        "data": [
            3.0,
            1.0,
            4.0,
            2.0
        ],
        "color": [
            "#8A2BE2"
        ],
        "coordinateSystem": "polar",
        "label": {
            "show": true,
            "position": "top",
            "formatter": "{c}",
            "fontSize": 16,
            "color": "#fff"
        },
        "barWidth": 12,
        "itemStyle": {
            "borderColor": "#fff",
            "borderWidth": 2
        }
    },
    "backgroundColor": "#f5f5f5",
    "legend": {
        "show": true,
        "top": "10%",
        "left": "center",
        "textStyle": {
            "color": "#333",
            "fontSize": 16
        }
    }
}