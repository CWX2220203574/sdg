{
  "tooltip": {
    "trigger": "item",
    "backgroundColor": "rgba(255, 255, 255, 0.8)",
    "textStyle": {
      "color": "#333"
    }
  },
  "legend": {
    "show": true,
    "top": "4%",
    "left": "center",
    "data": [
      "教育投资",
      "教学方法",
      "语言学习"
    ],
    "orient": "vertical",
    "right": "10%"
  },
  "series": [
    {
      "name": "Access From",
      "type": "pie",
      "radius": [
        "20%",
        "60%"
      ],
      "center": [
        "50%",
        "50%"
      ],
      "startAngle": 180,
      "endAngle": 360,
      "data": [
        {
          "value": 100,
          "name": "教育投资"
        },
        {
          "value": 200,
          "name": "教学方法"
        },
        {
          "value": 300,
          "name": "语言学习"
        }
      ],
      "itemStyle": {
        "borderColor": "#fff",
        "borderWidth": 2
      },
      "label": {
        "show": false,
        "position": "inside",
        "formatter": "{b}"
      },
      "emphasis": {
        "itemStyle": {
          "shadowBlur": 10,
          "shadowColor": "rgba(0, 0, 0, 0.5)"
        }
      }
    }
  ],
  "backgroundColor": "#f0f0f0",
  "animationDuration": 1500,
  "animationEasing": "elasticOut"
}