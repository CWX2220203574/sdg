{
  "tooltip": {
    "trigger": "item",
    "formatter": "{b}: {c} ({d}%)",
    "padding": 10,
    "borderColor": "#ccc",
    "borderWidth": 1
  },
  "legend": {
    "show": true,
    "top": "2%",
    "left": "45%",
    "data": [
      "客户满意度",
      "品牌定位",
      "项目管理",
      "忠诚度计划",
      "绿色营销",
      "组织结构",
      "产品开发",
      "可持续发展"
    ],
    "orient": "horizontal",
    "bottom": "10%",
    "itemGap": 20,
    "textStyle": {
      "fontSize": 12,
      "color": "#999"
    }
  },
  "series": [
    {
      "name": "Access From",
      "type": "pie",
      "radius": [
        "40%",
        "80%"
      ],
      "center": [
        "60%",
        "50%"
      ],
      "startAngle": 180,
      "endAngle": 360,
      "data": [
        {
          "value": 50,
          "name": "客户满意度"
        },
        {
          "value": 150,
          "name": "品牌定位"
        },
        {
          "value": 300,
          "name": "项目管理"
        },
        {
          "value": 80,
          "name": "忠诚度计划"
        },
        {
          "value": 220,
          "name": "绿色营销"
        },
        {
          "value": 400,
          "name": "组织结构"
        },
        {
          "value": 60,
          "name": "产品开发"
        },
        {
          "value": 380,
          "name": "可持续发展"
        }
      ],
      "itemStyle": {
        "borderColor": "#fff",
        "borderWidth": 3,
        "shadowBlur": 5,
        "shadowColor": "rgba(0, 0, 0, 0.3)"
      },
      "label": {
        "show": true,
        "position": "inside",
        "formatter": "{b}: {d}%",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#333"
      },
      "emphasis": {
        "itemStyle": {
          "opacity": 0.8
        }
      }
    }
  ],
  "backgroundColor": "#f5f5f5",
  "animationDuration": 2000,
  "animationEasing": "cubicInOut"
}