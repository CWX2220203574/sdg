{
    "tooltip": {
        "trigger": "item",
        "axisPointer": {
            "type": "shadow"
        },
        "textStyle": {
            "fontStyle": "italic"
        }
    },
    "legend": {
        "top": "2%",
        "right": "right",
        "orient": "vertical",
        "textStyle": {
            "fontSize": 10,
            "color": "#999"
        },
        "icon": "circle"
    },
    "series": [
        {
            "type": "pie",
            "radius": [
                "65%",
                "80%"
            ],
            "center": [
                "45%",
                "50%"
            ],
            "itemStyle": {
                "borderRadius": 10,
                "borderColor": "#fff",
                "borderWidth": 5,
                "shadowBlur": 10,
                "shadowColor": "rgba(0, 0, 0, 0.2)"
            },
            "label": {
                "show": true,
                "position": "inside",
                "formatter": "{b}\n{d}%",
                "fontSize": 14,
                "color": "#fff"
            },
            "emphasis": {
                "label": {
                    "show": true,
                    "color": "#0000ff",
                    "fontSize": 16
                }
            },
            "data": [
                {
                    "name": "电影",
                    "value": 1800
                },
                {
                    "name": "音乐",
                    "value": 800
                },
                {
                    "name": "电视",
                    "value": 2000
                },
                {
                    "name": "广播",
                    "value": 600
                }
            ],
            "animation": false,
            "color": [
                "#FF6384",
                "#36A2EB",
                "#FFCE56",
                "#4BC0C0"
            ]
        }
    ],
    "backgroundColor": "#eaeaea"
}